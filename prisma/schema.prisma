generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String     @id @default(uuid())
  firstname              String
  lastname               String
  email                  String     @unique
  password               String
  wallet                 Wallet?
  pinHash                String?
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt
  deletedAt              DateTime?
  donationsAsDonor       Donation[] @relation("DonationDonor") @ignore
  donationsAsBeneficiary Donation[] @relation("DonationBeneficiary") @ignore
  accounts               Account[]
}

model Wallet {
  id            String    @id @default(uuid())
  balance       Int       @default(0)
  wallet_number String    @unique
  bank_name     String
  bank_code     String
  currency      String    @default("NGN")
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
}

model Donation {
  id            String       @id @default(uuid())
  donorId       String
  beneficiaryId String
  donor         User         @relation("DonationDonor", fields: [donorId], references: [id])
  beneficiary   User         @relation("DonationBeneficiary", fields: [beneficiaryId], references: [id])
  amount        Int
  thankYouSent  Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  deletedAt     DateTime?
  transaction   Transaction?

  @@index([donorId])
  @@index([beneficiaryId])
  @@index([createdAt])
}

model Transaction {
  id             String    @id @default(uuid())
  donationId     String    @unique
  donation       Donation  @relation(fields: [donationId], references: [id])
  idempotencyKey String    @unique
  status         String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?
}

model Bank {
  id        String    @id @default(uuid())
  bank_name String
  bank_code String    @unique
  accounts  Account[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Account {
  id             String    @id @default(uuid())
  userId         String
  user           User      @relation(fields: [userId], references: [id])
  account_number String    @unique
  account_name   String
  bank_code      String
  bankId         String
  bank           Bank      @relation(fields: [bankId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?
}
